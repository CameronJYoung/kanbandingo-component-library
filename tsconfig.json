{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "jsx": "react",
    "moduleResolution": "Node"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "./src/**/*.stories.*"
  ]
}
